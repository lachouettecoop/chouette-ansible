version: "2.1"
services:
    odoo:
        build:
            context: ./odoo
            args:
                CONFIG_BUILD: "false"
        image: filament/odoo
        environment:
            ADMIN_PASSWORD: "{{ odoo_master_pass }}"
            PGPASSWORD: "{{ odoo_db_pass }}"
            PGUSER: "{{ odoo_db_user }}"
            PROXY_MODE: "true"
            PYTHONOPTIMIZE: 2
            PGDATABASE: "{{ odoo_db_test }}"
        depends_on:
            - db
            - smtp
            - inbox
{% if is_bluemind_api is defined %}
            - bluemindapi
{% endif %}
        tty: true
        volumes:
            - filestore:/var/lib/odoo:z
        networks:
            default:
            inverseproxy_shared:
{% if inventory_hostname in groups['docker_ldap'] %}
            openldap_default:
{% endif %}
        restart: unless-stopped
        labels:
            traefik.docker.network: "inverseproxy_shared"
            traefik.enable: "true"
            traefik.frontend.passHostHeader: "true"
            traefik.longpolling.port: "8072"
            traefik.port: "8069"
            traefik.dbmanager.frontend.auth.basic:
                "{{ odoo_db_user }}:{{ PROXY_BCRYPT }}"
            traefik.dbmanager.frontend.rule:
                "Host:{{ odoo_test_url }};PathPrefix:/web/database/"
            traefik.dbselector.frontend.rule:
                "Host:{{ odoo_test_url }};PathPrefix:/web/database/{p:selector|list}"
            traefik.longpolling.frontend.rule:
                "Host:{{ odoo_test_url }};PathPrefix:/longpolling/"
            traefik.websiteinfo.frontend.auth.basic:
                "{{ odoo_db_user }}:{{ PROXY_BCRYPT }}"
            traefik.websiteinfo.frontend.rule:
                "Host:{{ odoo_test_url }};Path:/website/info"
            traefik.www.frontend.rule: "Host:{{ odoo_test_url }}"
        command:
            - odoo
            - --workers=1
            - --max-cron-threads=0

    db:
        image: postgres:9.6-alpine
        environment:
            POSTGRES_USER: "{{ odoo_db_user }}"
            POSTGRES_PASSWORD: "{{ odoo_db_pass }}"
        volumes:
            - db:/var/lib/postgresql/data:z
        restart: unless-stopped

    smtp:
        image: tecnativa/smtp-sink
        restart: unless-stopped

    inbox:
        image: tecnativa/tcp-proxy
        environment:
            LISTEN: ":100"
            TALK: "localhost:993"
        restart: unless-stopped

{% if is_bluemind_api is defined %}
    bluemindapi:
        image: tecnativa/tcp-proxy
        environment:
            LISTEN: ":10443"
            TALK: "localhost:10443"
        restart: unless-stopped
{% endif %}


networks:
    default:
        driver_opts:
            encrypted: 1
    inverseproxy_shared:
        external: true
{% if inventory_hostname in groups['docker_ldap'] %}
    openldap_default:
        external: true
{% endif %}

volumes:
    filestore:
    db:
