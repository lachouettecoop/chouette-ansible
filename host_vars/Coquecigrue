## Ansible configuration for connecting to remote host
# IP address
ansible_ssh_host: "{{ coquecigrue_srv_ip }}"
# User
host_user: "{{ coquecigrue_srv_user }}"
# Encryped password
host_password: "{{ coquecigrue_srv_pass }}"
# Clear Password
ansible_ssh_pass: "{{ coquecigrue_srv_pass }}"
ansible_sudo_pass: "{{ coquecigrue_srv_pass }}"

## Odoo configuration
# URL for setting certificate
OE_URL: "{{ coquecigrue_srv_url }}" 

# Odoo version and daemon name
OE_VERSION: "10.0"
OE_DAEMON: "odoo-bin"

# Odoo Master password
OE_SUPERADMIN: "{{ coquecigrue_odoo_master_pass }}"

# Custom modules
OE_CUSTOM:

## OwnCloud configuration
# URL for Owncloud
#cloud_url: "{{ coquecigrue_owncloud_url }}"
# PostgreSQL password for Owncloud
#cloud_pg_hash: "{{ coquecigrue_owncloud_pg_hash }}"
# Data directory for Owncloud
#cloud_data_dir: "{{ coquecigrue_owncloud_data_dir }}"
