## Ansible configuration for connecting to remote host
# IP address
ansible_ssh_host: "{{ hedwige_srv_ip }}"
# User
host_user: "{{ hedwige_srv_user }}"
# Encryped password
host_password: "{{ hedwige_srv_pass }}"
# Clear Password
ansible_sudo_pass: "{{ hedwige_srv_pass }}"


## Docker configuration
# Location of dockers
docker_location: "/home/chouette/docker/"


## Odoo configuration
# URL for setting certificate
OE_URL: "{{ hedwige_srv_url }}" 

# Odoo version and daemon name
OE_VERSION: "10.0"
OE_DAEMON: "odoo-bin"

# Odoo Master password
OE_SUPERADMIN: "{{ hedwige_odoo_master_pass }}"

# Custom modules
OE_CUSTOM:

